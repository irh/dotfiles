[include]
  path = ~/.gitconfig_local

[alias]
  a = add
  br = branch
  branchname = !git branch | sed -n '/^*/s/^* //p'
  bs = bisect
  ca = commit -v --amend
  ci = commit -v
  cl = clone --recursive
  co = checkout
  cp = cherry-pick
  cpa = cherry-pick --abort
  cpc = cherry-pick --continue
  da = diffall
  deletemerged = !git branch --merged origin/master | grep -v 'master$' | xargs git branch -d
  deletemerged9 = !git branch --merged origin/master-9 | grep -v 'master-9$' | xargs git branch -d
  deletemerged10 = !git branch --merged origin/master-10 | grep -v 'master-10$' | xargs git branch -d
  df = diff --ignore-submodules
  dt = difftool -y
  dump = cat-file -p
  fe = fetch --prune
  hist = log --pretty=format:\"%C(yellow)%h%Creset | %Cgreen%an%Creset | %Cred%ad%Creset | %s%C(cyan)%d%Creset\" --graph --date=short -30 @~30..@
  histall = log --pretty=format:\"%C(yellow)%h%Creset | %Cgreen%an%Creset | %Cred%ad%Creset | %s%C(cyan)%d%Creset\" --graph --date=short
  id = rev-parse
  local-branches = !git branch -vv | cut -c 3- | awk '$3 !~/\\[/ { print $1 }'
  mt = mergetool
  nffmerge = merge --no-ff --log
  ps = push
  pu = pull --prune
  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase -i
  rbm = rebase -i origin/master
  rbp = "!f() { mb=$(git merge-base HEAD $1); git rebase -i $mb; }; f"
  root = rev-parse --show-toplevel
  showfiles = diff-tree --no-commit-id --name-only -r
  sm = submodule
  smf = submodule foreach git submodule update --init --recursive -- $path
  smi = submodule init --recursive
  smu = submodule update --init --recursive
  st = status
  type = cat-file -t
  unstage = reset HEAD
  update-commit-graph = !git show-ref -s | git commit-graph write --stdin-commits
  upstream = !git rev-parse --abbrev-ref --symbolic-full-name @{u}
  upstream-create = !git branchname | xargs git push -u origin
  wip = commit -a -m WIP

[branch]
  autosetuprebase = always

[color]
  ui = true

[core]
  autocrlf = input
  commitGraph = true
  editor = /usr/local/bin/nvim
  excludesfile = ~/.gitignore_global
  ignorecase = true
  pager = diff-so-fancy | less --tabs=4 -RFX
  preloadindex = true
  sparsecheckout = true
  trustctime = false
  untrackedCache = true

[diff]
  #external = cdiff
  compactionHeuristic = true
  context = 0
  submodule = log
  tool = FileMerge

[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process

[gc]
  auto = 0
  commitGraph = true

[http]
  postBuffer = 1073741824

[interactive]
  singlekey = true

[merge]
  tool = nvim
  conflictstyle = diff3

[merge "ours"]
  driver = true

[mergetool]
  prompt = false
  keepBackup = false

[mergetool "nvim"]
  prompt = false
  keepBackup = false
  cmd = /usr/local/bin/nvim -f -c \"Gdiff\" \"$MERGED\"

[pager]
  difftool = true

[push]
  default = simple

[rebase]
  autosquash = true

[status]
  submodulesummary= true

[submodule]
  fetchJobs = 8

[user]
  name = irh
  email = ian.r.hobson@gmail.com

[url "https://"]
  insteadOf = git://

